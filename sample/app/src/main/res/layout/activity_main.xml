<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aromajoin.controllersdksample.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/port1Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="80sp"
            android:text="1"
            android:gravity="center"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/port2Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="80sp"
            android:text="2"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
           />

        <Button
            android:id="@+id/port3Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textSize="80sp"
            android:text="3"
            android:gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/port4Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="80sp"
            android:text="4"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/port5Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="80sp"
            android:text="5"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/port6Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="80sp"
            android:text="6"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
